print("Program starting.")

Value = int(input("Insert a positive integer: "))

sequence = 0

while True:
    print(int(Value), end="")
    if Value == 1:
        break
    print(" -> ", end="")
    if Value % 2 == 0:
        Value = Value / 2
    else:
        Value = Value * 3 + 1
    sequence = sequence + 1
    
print(f"\nSequence had {sequence} total steps.")

print("\nProgram ending.")